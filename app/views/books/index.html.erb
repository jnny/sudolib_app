<h1>Listing books</h1>

<table>
  <tr>
    <th>Isbn</th>
    <th>Genre</th>
    <th>Title</th>
    <th>Title long</th>
    <th>Author</th>
    <th>Publication date</th>
    <th>Publisher</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.isbn %></td>
    <td><%= book.genre %></td>
    <td><%= book.title %></td>
    <td><%= book.title_long %></td>
    <td><%= book.author %></td>
    <td><%= book.publication_date %></td>
    <td><%= book.publisher %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>

